<%= provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
  <% if @messages.any? %>
    <h3>Messages (<%= @messages.count %>)</h3>
    <ol class="messages">
      <%= render :partial => "layouts/message", collection: @messages %>
    </ol>
    <%= will_paginate @messages %> 
  <% end %> 
  </div>
</div>