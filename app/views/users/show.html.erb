<%= provide(:title, @user.name) %>

<h1><%= @user.name %></h1>

<div class="row">
  <% if @messages.any? %>
    <h3>Messages (<%= @messages.count %>)</h3>
    <ol class="messages">
      <%= render :partial => "layouts/message", collection: @messages %>
    </ol>
    <%= will_paginate @messages %> 
  <% end %> 
</div>